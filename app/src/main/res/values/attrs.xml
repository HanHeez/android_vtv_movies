<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MainUpView">
        <attr name="upImageRes"  format="reference" />
        <attr name="shadowImageRes"  format="reference" />
    </declare-styleable>

    <item name="lb_browse_header_unselect_alpha" type="fraction">100%</item>
    <integer name="lb_onboarding_header_description_delay">33</integer>
    <integer name="lb_onboarding_header_title_delay">33</integer>

    <!--transition duration choose row or back to header-->
    <integer name="lb_browse_headers_transition_duration">250</integer>
    <integer name="lb_browse_headers_transition_delay">150</integer>
    <integer name="lb_browse_rows_anim_duration">250</integer>
    <item name="lb_search_bar_speech_orb_max_level_zoom" type="fraction">144%</item>
    <item name="lb_search_orb_focused_zoom" type="fraction">110%</item>
    <item name="lb_search_orb_pulse_duration_ms" type="integer">1000</item>
    <item name="lb_search_orb_scale_duration_ms" type="integer">150</item>
    <item name="lb_browse_header_select_duration" format="integer" type="dimen">0</item>
    <item name="lb_browse_header_select_scale" format="float" type="dimen">1</item>
</resources>