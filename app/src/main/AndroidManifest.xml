<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vtvfillm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:name=".base.MoviesApplication"
        android:allowBackup="true"
        android:banner="@drawable/app_logo_new"
        android:icon="@drawable/app_logo_new"
        android:roundIcon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".ui.mainactivity.activity.MainActivity"
            android:banner="@drawable/app_logo_new"
            android:logo="@drawable/app_logo_new"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.mainactivity.activity.MovieDetailActivity" />
        <activity android:name=".ui.mainactivity.activity.SearchActivity" />
        <activity android:name=".ui.mainactivity.activity.PlayVideoActivity"
            android:hardwareAccelerated="true" />
        <activity android:name=".ui.mainactivity.activity.EpisodeListActivity" />
        <activity android:name=".ui.mainactivity.activity.SubCategoryActivity"></activity>
    </application>

</manifest>